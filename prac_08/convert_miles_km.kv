BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        BoxLayout:
            TextInput:
                id: input_miles
                text: '34'
            BoxLayout:
                size_hint_x: 0.2
                orientation: 'vertical'
                Button:
                    text: 'Up'
                    on_press: app.handle_increment(input_miles.text, 1)
                Button:
                    text: 'Down'
                    on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion(input_miles.text)
    Label:
        id: output_label
        text: ''
        color: (1, 1, 0, 1)